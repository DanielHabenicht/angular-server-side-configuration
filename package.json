{
  "name": "angular-server-side-configuration",
  "version": "1.2.0",
  "description": "Configure an angular application on the server",
  "main": "./main.js",
  "module": "./index.js",
  "types": "./src/index.d.ts",
  "bin": {
    "ngssc": "./bin/ngssc"
  },
  "scripts": {
    "clean": "rimraf .rpt2_cache .nyc_output coverage index.d.ts index.js",
    "build:ts": "rollup -c rollup.config.js",
    "build:dts": "dts-bundle-generator -o index.d.ts ./src/index.ts",
    "build:docs": "typedoc --theme markdown --out documentation --mode modules --exclude **/*.spec.ts src",
    "build": "npm run build:ts && npm run build:dts",
    "pretest": "npm run clean",
    "test": "nyc mocha './src/**/*.spec.ts'",
    "wintest": "nyc mocha ./src/**/*.spec.ts",
    "prepack": "npm run build"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-server-side-configuration.git"
  },
  "keywords": [
    "angular",
    "configuration",
    "server",
    "server-side",
    "docker",
    "openshift",
    "kubernetes"
  ],
  "author": "kyubisation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-server-side-configuration/issues"
  },
  "homepage": "https://github.com/kyubisation/angular-server-side-configuration#readme",
  "dependencies": {
    "esm": "^3.0.84"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "commander": "^2.19.0",
    "cross-spawn": "^6.0.5",
    "dts-bundle-generator": "^1.6.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.20",
    "typescript": "^3.2.2"
  }
}
